<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context="com.jmpcdev.wardrobe.LoginActivity">

    <ImageView
        android:id="@+id/imvGarmentHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:contentDescription="@string/image_garment_description"
        app:layout_constraintBottom_toTopOf="@id/claGarment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icono_wardrobe"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/claGarment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imvGarmentHome"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/claSelectImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintBottom_toTopOf="@id/edtNameGarment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imvGarmentPreView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imbCamera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <ImageButton
                android:id="@+id/imbCamera"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@id/imvGarmentPreView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/imbSelectPhoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_camera" />


            <ImageButton
                android:id="@+id/imbSelectPhoto"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@id/imvGarmentPreView"
                app:layout_constraintTop_toBottomOf="@id/imbCamera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/edtNameGarment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/garment_name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@id/spinnerType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/claSelectImage"
            app:layout_constraintWidth_percent="0.7" />


        <Spinner
            android:id="@+id/spinnerType"
            style="?android:attr/spinnerItemStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/edtDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtNameGarment"
            app:layout_constraintWidth_percent="0.7" />

        <EditText
            android:id="@+id/edtDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@id/edtColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerType"
            app:layout_constraintWidth_percent="0.7" />

        <EditText
            android:id="@+id/edtColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/color"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@id/edtTissue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtDesc"
            app:layout_constraintWidth_percent="0.7" />

        <EditText
            android:id="@+id/edtTissue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/tissue"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@id/multispinnerTemperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtColor"
            app:layout_constraintWidth_percent="0.7" />

        <com.jmpcdev.wardrobe.MultiSpinner
            android:id="@+id/multispinnerTemperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:prompt="@string/temperature"
            app:layout_constraintBottom_toTopOf="@id/edtStore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtTissue"
            app:layout_constraintWidth_percent="0.71" />


        <EditText
            android:id="@+id/edtStore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/store"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@id/btnCombine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multispinnerTemperature"
            app:layout_constraintWidth_percent="0.7" />

        <Button
            android:id="@+id/btnCombine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/combine"
            app:layout_constraintBottom_toTopOf="@id/btnGarment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtStore"
            app:layout_constraintWidth_percent="0.7" />

        <Button
            android:id="@+id/btnGarment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cont"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCombine"
            app:layout_constraintWidth_percent="0.7" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>